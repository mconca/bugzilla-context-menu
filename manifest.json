{

  "manifest_version": 2,
  "name": "Bugzilla Context Menu",
  "description": "Right-click to search highlighted text in Bugzilla",
  "version": "1.1",
  "applications": {
    "gecko": {
      "strict_min_version": "55.0a1"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": [
    "contextMenus",
    "activeTab"
  ],

  "icons": {
    "16": "icons/page-16.png",
    "32": "icons/page-32.png",
    "48": "icons/page-48.png"
  }

}
